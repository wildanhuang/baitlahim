<div class="jumbotron transparent">
  <div class="container">
    <h1><small>Gereja Baptis Indonesia</small> Baitlahim <small>Bandung</small></h1>
    <p>
      Please enter your email and password to log into our website. If you log in, there's a lots of more features you can find..
      <br/>
      If you don't have an <big>Account</big>, please contact our administrator..
    </p>
  </div>
</div>

<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>

    <div class="form-group">
      <%= f.label :email, :class => "col-sm-2 control-label" %>
      <div class="col-sm-8">
      <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Enter email" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, :class => "col-sm-2 control-label" %>
      <div class="col-sm-8">
      <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Enter password" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <div class="checkbox">
            <label>
              <%= f.check_box :remember_me %> <%= f.label :remember_me %>
            </label>
          </div>
        </div>
      </div>
    <% end %>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
        <%= f.submit "Sign in", :class => "btn btn-default btn-lg" %>
      </div>
    </div>
  <% end %>

  <%#= render "devise/shared/links" %>
</div>
